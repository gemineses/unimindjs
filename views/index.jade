extends layout

block index
  .row
    .col.l6.offset-l3.s12.m7
      .card.large
        .card-image
          img(src='images/eddie.jpg')
          span(class='card-title') UNIMIND
        .card-content
          .p.center Search, Start, Share.
            | Project Social Media.
        .card-action.center
          ul(class='collapsible' data-collapsible='accordion')
            li
              .collapsible-header.waves-effect.waves-light.btn.green Let's started!
              .collapsible-body
                .row
                  form.col.s12
                    .row
                      .input-field.col.s12
                        i.material-icons.prefix account_circle
                        input(id='icon_prefix' type='text' class='validate')
                        label(for='icon_prefix') User
                    .row
                      .input-field.col.s12
                        i.material-icons.prefix visibility_off
                        input(id='icon_telephone' type='tel' class='validate')
                        label(for='icon_telephone') Password
                    .row
                      .col.l3.offset-l1
                        input(type='button' class='waves-effect waves-light btn' value='Login')
                      .col.l6.offset-l1
                        a(href='login' class='waves-effect waves-light btn') Create account
  .row
    .p.center By 
      a(href='https://www.github.com/gemineses' class='textGreen') Gemineses