extends layout

block content
  header
    include header
  main
    .row
      .col.l4.offset-l4
        .card.medium
          .card-image
            img(src='images/eddie.jpg')
            span(class='card-title') Create account
          .card-content
            .row
              .input-field.col.s6
                i.material-icons.prefix account_circle
                input(id='icon_prefix' type='text' class='validate')
                label(for='icon_prefix') User Name
              .input-field.col.s6
                i.material-icons.prefix visibility_off
                input(id='icon_telephone' type='tel' class='validate')
                label(for='icon_telephone') Password
          .card-action
            a(href='#' class='waves-effect waves-light btn') Save